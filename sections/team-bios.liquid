<style>
  .bio {
  	margin: 60px 0;
  }
  .bio .bio-name {
    margin: 0 0 5px;
    color: black;
  }
  .bio .bio-image {
  	max-width: 90%;
    display: inline-block;
    border-radius: 100%;
  }
  .bio .bio-linkedin {
  	font-family: "Lato-regular",sans-serif;
    font-weight: bold;
    color: black;
  }
  .bio .bio-title {
    display: block;
    color: black;
    font-size: 16px;
    margin-bottom: 5px;
  }
  .bio .bio-artwork {
  	font-family: "Lato-regular",sans-serif;
    margin-top: 15px;
  }
  .bio .bio-artwork a {
  	font-family: "Lato-regular",sans-serif;
    font-style: italic;
  }
  .bio p{
  	margin-bottom: 10px;
    color: black;
    font-size: 14px;
    line-height: 1.4em;
  }
  .bio .bio-contact {
    gap: 5px;
    display: flex;
  }
  .bio .bio-quote {
    margin: 15px 0;
  }
