          },
          {
            "type": "text",
            "id": "bios_title",
            "label": "Title"
          },
          {
            "type": "text",
            "id": "bios_location",
            "label": "Location"
          },
          {
            "type": "text",
            "id": "bios_position",
            "label": "Position"
          },
          {
            "type": "text",
            "id": "bios_company",
            "label": "Company"
          },
          {
            "type": "text",
            "id": "bios_company_link",
            "label": "Company Link"
          },
          {
            "type": "richtext",
            "id": "bios_details",
            "label": "Details"
          },
          {
            "type": "product",
            "id": "bios_artwork",
            "label": "Featured Artwork"
          },
          {
            "type": "richtext",
            "id": "bios_quote",
            "label": "Quote"
          },
          {
            "type": "image_picker",
