  .bio .bio-quote p:after {
    content: '"';
  }
  .bio .bio-details {
    margin-top: 20px;
  }
  .bio .bio-email {
    color: #0064ff;
    text-decoration: underline;
    display: block;
  	font-family: "Lato-regular",sans-serif;
  }
</style>